<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.maria.basestationapp.Reminder">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="525dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/menuReminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="50dp"
                android:background="@drawable/buttons"
                android:text="MenÃ¼"
                android:layout_weight="0."/>
            <TextView
                android:text="Erinnerungen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewGoals"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:textSize="30sp"
                android:layout_weight="0.7"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ListView
                android:layout_width="490dp"
                android:layout_height="353dp"
                android:id="@+id/reminderlistView"
                android:layout_marginBottom="120dp"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="250dp"/>

        </LinearLayout>

    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addReminder"
        android:layout_width="148dp"
        android:layout_height="76dp"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        app:srcCompat="@android:drawable/ic_menu_add"
        app:backgroundTint="@color/green"
        app:rippleColor="@color/green" />

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_daily_goals"
        />

</android.support.design.widget.CoordinatorLayout>

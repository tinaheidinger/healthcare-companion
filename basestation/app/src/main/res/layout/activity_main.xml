<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.maria.basestationapp.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@android:style/Theme.NoTitleBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#c6e2ff">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="994dp"
                android:layout_height="288dp"
                app:srcCompat="@drawable/cat"
                android:radius="30px"
                android:layout_marginTop="30dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:layout_margin="50dp">

                <ImageButton
                    android:id="@+id/goalButton"
                    android:layout_width="0.0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:background="@android:color/transparent"
                    android:elevation="0dp"
                    android:layout_marginLeft="30dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:tint="@android:color/transparent"
                    app:srcCompat="@drawable/tagesziel_button" />

                <ImageButton
                    android:id="@+id/reminderButton"
                    android:layout_width="0.0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:background="@android:color/transparent"
                    android:elevation="0dp"
                    android:layout_marginLeft="50dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:tint="@android:color/transparent"
                    app:srcCompat="@drawable/erinnerung_button" />

                <ImageButton
                    android:id="@+id/fluidButton"
                    android:layout_width="0.0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:background="@android:color/transparent"
                    android:elevation="0dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:layout_marginLeft="50dp"
                    android:tint="@android:color/transparent"
                    app:srcCompat="@drawable/wasser_button" />

                <ImageButton
                    android:id="@+id/walkButton"
                    android:layout_width="0.0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:background="@android:color/transparent"
                    android:elevation="0dp"
                    android:layout_marginLeft="50dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:tint="@android:color/transparent"
                    app:srcCompat="@drawable/schritte_button" />


            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
